<div class="header">
    <div class="header-nav">
        <nav class="navbar navbar-default" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Agger</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example">
                    <ul class="nav navbar-nav">
                        <li><%= link_to "About","#",data:{toggle:"modal",target:"#about-modal"} %></li>
                        <li><%= link_to "Contact", "#",data:{toggle: "modal",target:"#contact-modal"} %></li>
                        <li>
                            <a href="#" data-toggle='modal' data-target="#login-modal">Login / Register</a>
                        </li>
                        <li>
                            <a href="#" id="search-trigger">
                                <i class="fa fa-search"></i>
                            </a>
                        </li>

                    </ul>

                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </nav>

    </div>

    <div id="header-search">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="input-group">

                        <input type="text" class="form-control" placeholder="Search for ...">
                        <span class="input-group-btn">
                            <button type="button" name="button" class="btn btn-default">Go!</button>
                        </span>

                    </div>

                </div>

            </div>

        </div>
    </div>

    <div class="header-filters">
        <div >
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-inline">
                        <li><%= link_to "Top Posts","#",class:"btn btn-primary btn-sm" %></li>
                        <li><%= link_to "Recent Posts","#",class:"btn btn-primary btn-sm" %></li>
                    </ul>

                </div>

            </div>

        </div>
    </div>
</div>
